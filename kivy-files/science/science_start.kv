<ScienceStartScreen>:
    name: "science_start"

    MDFloatLayout:
        md_bg_color: rgba(60, 12, 156, 255)
        Image:
            source: "assets/imgs/science/background.png"
            size: 1, 1

        MDLabel:
            text: "Makini Science Lab"
            font_name: 'LuckiestGuy'
            font_size: '60sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .85}
            color: 1, 1, 1, 1
            line_height: 1.1

        MDFillRoundFlatButton:
            text: "Back"
            font_name: "LuckiestGuy"
            font_size: '40sp'
            size_hint: .27, .12
            md_bg_color : rgba(251, 187, 29, 255)
            pos_hint: {'center_x': .3, 'center_y': .15}
            on_release:
                root.manager.current = 'subject_list'

        MDFillRoundFlatButton:
            text: "Start"
            font_name: "LuckiestGuy"
            font_size: '40sp'
            size_hint: .27, .12
            md_bg_color : rgba(251, 187, 29, 255)
            pos_hint: {'center_x': .7, 'center_y': .15}
            on_release:
                root.manager.current = 'science_topics'

