


<ScienceTopicsScreen>:
    name: "science_topics"
    MDFloatLayout:
        md_bg_color: rgba(60, 12, 156, 255)

        MDLabel:
            text: "Choose Topic to study"
            font_name: 'LuckiestGuy'
            font_size: '60sp'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .85}
            color: 1, 1, 1, 1
            line_height: 1.1

        MDGridLayout:
            rows: 2
            cols: 2
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 15
            padding: 15


        MDFillRoundFlatButton:
            text: "Back"
            font_name: "LuckiestGuy"
            font_size: '40sp'
            size_hint: .55, .12
            md_bg_color : rgba(251, 187, 29, 255)
            pos_hint: {'center_x': .5, 'center_y': .15}