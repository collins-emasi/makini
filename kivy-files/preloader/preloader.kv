<MyGrid@MDGridLayout>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            origin: self.center
    canvas.after:
        PopMatrix

<PreloaderScreen>:
    name: 'preloader'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDLabel:
            text: "Welcome to Makini..."
            font_name: "LuckiestGuy"
            font_size: '40sp'
            pos_hint: {'center_x': .5, 'center_y': .1}
            halign: 'center'
            color: rgba(60, 12, 156, 220)
            line_height: 1.1

        MyGrid:
            id: loading
            angle: 0
            rows: 2
            cols: 2
            size_hint: None, None
            height: 60
            width: 60
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 5
            MDFloatLayout:
                md_bg_color: rgba(251, 187, 29, 255)
            MDFloatLayout:
                md_bg_color: rgba(127, 186, 0, 255)
            MDFloatLayout:
                md_bg_color: rgba(60, 12, 156, 255)
            MDFloatLayout:
                md_bg_color: rgba(242, 80, 34, 255)